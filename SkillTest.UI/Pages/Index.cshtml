@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>All Persons</h2>
<div class="text-end">
    <a href="@Url.Page("./Create")" class="btn btn-primary">Add New Person</a>
</div>

<table class="mt-3 table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Active</th>
            <th>Random Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @if (Model.Persons.Count > 0)
        {
            @foreach (var person in Model.Persons)
            {
                <tr>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>@person.Active</td>
                    <td>@person.RandomNumber</td>
                    <td>
                        <a class="btn btn-success" href="@Url.Page("./Edit", new { id = person.Id })">Edit</a>
                        <a class="btn btn-danger" href="@Url.Page("./Delete", new { id = person.Id })">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Data</td>
            </tr>
        }
    </tbody>
</table>